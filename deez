modules:
  http_2xx:
    prober: http
    timeout: 10s
    http:
      method: GET
      valid_http_versions: ["HTTP/1.1", "HTTP/2"]
      valid_status_codes: [200, 301, 302]   # Accepts OK and redirect responses
      no_follow_redirects: false            # Follow redirects (true = disable)
      preferred_ip_protocol: "ip4"          # IPv4 preferred over IPv6
      tls_config:
        insecure_skip_verify: false         # Set to true only for self-signed certs

  tcp_connect:
    prober: tcp
    timeout: 5s

  icmp:
    prober: icmp
    timeout: 5s